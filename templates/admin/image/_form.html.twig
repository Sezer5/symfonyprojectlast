<form name="image" method="post" enctype="multipart/form-data">
	<div id="image">
		<div>
			<label for="image_title">Title</label>
			<input type="text" id="image_title" name="image[title]" maxlength="255"/></div>
		<div>
			<label for="image_image">Image</label>
			<input type="file" id="image_image" name="image[image]" maxlength="255"/></div>


		<input type="text" id="image_hotel" name="image[hotel]" value="{{id}}" hidden/>

	</div>
	<button class="btn">Save</button>
</form>
<hr>
<div class="box-body">

	<table class="table table-bordered">
		<thead>
			<tr>
				<th>Id</th>
				<th>Title</th>

				<th>Image</th>
				<th>Delete</th>


			</tr>
		</thead>
		<tbody>
			{% for image in images %}
				<tr>
					<td>{{ image.id }}</td>
					<td>{{ image.title }}</td>

					<td><img src="{{asset('uploads/images/' ~ image.image) }}" style="width:40px">
					</td>
					<td>
						<form method="post" action="{{ path('app_image_delete', {'id': image.id,'hid':id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
							<button class="btn">Delete</button>
						</form>
					</td>

				</tr>
			{% endfor %}
		</tbody>
	</table>


</div>

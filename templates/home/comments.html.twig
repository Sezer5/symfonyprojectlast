        {% endblock %}


        <div class="span8">
            <!-- start article 1 -->
            <article class="blog-post">
                <div class="post-heading">
                    <h3><a href="#">User Comments</a></h3>
                </div>
                <div class="row">
                    <div class="span8">


                        <div class="clearfix">
                        </div>
                       USER COMMENTS

                    </div>
                </div>
            </article>


        </div>




    </div>
</div>

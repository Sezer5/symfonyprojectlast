<body class="register-page">
    <div class="register-box">
        <div class="register-logo">
            <a href="{{ asset('assets') }}/admin/index2.html"><b>Admin</b>LTE</a>
        </div>

        <div class="register-box-body">
            <p class="login-box-msg">Register a new memberships</p>
            <h1>Register</h1>

            {{ form_errors(registrationForm) }}

            <form name="registration_form" method="post">
                <div>
                    <label for="registration_form_email" class="required">Email</label>
                    <input type="text" id="registration_form_email" name="registration_form[email]" required="required"
                        maxlength="180" class="form-control">
                </div>
                <div>
                    <label for="registration_form_name">Name</label>
                    <input type="text" id="registration_form_name" name="registration_form[name]" maxlength="255"
                        class="form-control">
                </div>
                <div>
                    <label for="registration_form_surname">Surname</label><input type="text"
                        id="registration_form_surname" name="registration_form[surname]" maxlength="255"
                        class="form-control">
                </div>
                <div><label for="registration_form_plainPassword" class="required">Password</label>
                    <input type="password" id="registration_form_plainPassword" name="registration_form[plainPassword]"
                        required="required" autocomplete="new-password" class="form-control">
                </div>
                <div>
                    <label for="registration_form_agreeTerms" class="required">Agree terms</label>
                    <input type="checkbox" id="registration_form_agreeTerms" name="registration_form[agreeTerms]"
                        required="required" value="1" class="form-control">
                </div>

                <button type="submit" class="btn">Register</button>
            </form>



            <div class="social-auth-links text-center">
                <p>- OR -</p>
                <a href="#" class="btn btn-block btn-social btn-facebook btn-flat"><i class="fa fa-facebook"></i> Sign
                    up using Facebook</a>
                <a href="#" class="btn btn-block btn-social btn-google-plus btn-flat"><i class="fa fa-google-plus"></i>
                    Sign up using Google+</a>
            </div>

            <a href="login.html" class="text-center">I already have a membership</a>
        </div><!-- /.form-box -->
    </div><!-- /.register-box -->

